@model IEnumerable<reserva_de_sala_dsm.Models.Sala>

@{
    ViewData["Title"] = "Lista de Sala";
}

<h1>Lista de Salas</h1>

@if(TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Sala</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Capacidade</th>
            <th>Recursos</th>
            <th></th>
        </tr>
    </thead>
</table>
<body>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Nome</td>
            <td>@item.Capacidade</td>
            <td>@item.Recursos</td>
        <td>
            <a asp-controller="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
            <a asp-controller="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
            <a asp-controller="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
    }
</body>